<form method="post" action="{{ path('comment_delete', {'id': comment.id}) }}" onsubmit="return confirm({{ 'Confirm delete' | trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="form-button-link"><i class="fas fa-trash-alt"></i></button>
</form>
