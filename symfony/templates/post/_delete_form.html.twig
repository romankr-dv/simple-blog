<form method="post" action="{{ url('post_delete', {'slug': post.slug}) }}" onsubmit="return confirm({{ 'Confirm delete' | trans }});">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
    <button class="form-button-link"><i class="fas fa-trash-alt"></i></button>
</form>
