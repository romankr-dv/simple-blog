{% extends 'page.html.twig' %}

{# @var category \App\Entity\Category#}

{% block title %}{{ 'Categories' | trans }} - {{ parent() }}{% endblock %}

{% block content %}
    <h1 class="h3 mb-3">{{ 'Categories' | trans }}</h1>

    <table class="table table-striped custom-table">
        <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'Title' | trans }}</th>
                <th>{{ 'Order' | trans }}</th>
                <th>{{ 'CreatedAt' | trans }}</th>
                <th>{{ 'UpdatedAt' | trans }}</th>
                <th>{{ 'Operations' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.order }}</td>
                <td>{{ category.createdAt|date('Y-m-d') }}</td>
                <td>{{ category.updatedAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="mr-1"><i class="fas fa-pencil-alt"></i></a>
                    <div class="d-inline-block">{{ include('category/_delete_form.html.twig') }}</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'No categories found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-primary">{{ 'Create category' | trans }}</a>
{% endblock %}
