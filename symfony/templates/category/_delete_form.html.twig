<form method="post" action="{{ path('category_delete', {'id': category.id}) }}" onsubmit="return confirm('{{ 'Confirm delete' | trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
    <button class="form-button-link"><i class="fas fa-trash-alt"></i></button>
</form>
